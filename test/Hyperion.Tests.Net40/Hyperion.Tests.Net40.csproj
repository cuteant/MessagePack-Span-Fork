<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Hyperion.Tests</RootNamespace>
    <AssemblyName>Hyperion.Tests.Net40</AssemblyName>
    <TargetFramework>net471</TargetFramework>
    <RuntimeFrameworkVersion Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">$(NETCoreApp2RuntimeFrameworkVersion)</RuntimeFrameworkVersion>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net471' or '$(TargetFramework)' == 'net451' or '$(TargetFramework)' == 'net40' ">
    <DefineConstants>$(DefineConstants);SERIALIZATION</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="$(MicrosoftNetTestSdkPackageVersion)" />
    <PackageReference Include="xunit" Version="$(xUnitPackageVersion)" />
    <PackageReference Include="xunit.analyzers" Version="$(xUnitAnalyzersPackageVersion)" />
    <PackageReference Include="xunit.runner.visualstudio" Version="$(xUnitRunnerVsPackageVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Hyperion.Tests\**\*.cs" Exclude="..\Hyperion.Tests\bin\**;..\Hyperion.Tests\obj\**" />
    <EmbeddedResource Include="..\Hyperion.Tests\**\*.resx" Exclude="..\Hyperion.Tests\bin\**;..\Hyperion.Tests\obj\**;@(EmbeddedResource)" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CuteAnt.Core">
      <HintPath>..\..\src\Hyperion\bin\Debug\net40\CuteAnt.Core.dll</HintPath>
    </Reference>
    <Reference Include="CuteAnt.Core.Abstractions">
      <HintPath>..\..\src\Hyperion\bin\Debug\net40\CuteAnt.Core.Abstractions.dll</HintPath>
    </Reference>
    <Reference Include="Hyperion">
      <HintPath>..\..\src\Hyperion\bin\Debug\net40\Hyperion.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.Extensions.Primitives">
      <HintPath>..\..\src\Hyperion\bin\Debug\net40\Microsoft.Extensions.Primitives.dll</HintPath>
    </Reference>
    <Reference Include="System.Collections.Immutable">
      <HintPath>..\..\src\Hyperion\bin\Debug\net40\System.Collections.Immutable.dll</HintPath>
    </Reference>
    <Reference Include="System.Reflection.Metadata">
      <HintPath>..\..\src\Hyperion\bin\Debug\net40\System.Reflection.Metadata.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>